<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task.id) %> <%= link_to "Delete", task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{task.title}?"} %></li>
  <% end %>
</ul>  

<%= link_to "Create New Task", new_task_path, class: "btn btn-primary" %>